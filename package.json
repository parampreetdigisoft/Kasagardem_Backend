  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only --notify false src/server.ts",
    "migrate": "ts-node ./node_modules/migrate-mongo/bin/migrate-mongo.js up",
    "migrate:down": "ts-node ./node_modules/migrate-mongo/bin/migrate-mongo.js down",
    "migrate:status": "ts-node ./node_modules/migrate-mongo/bin/migrate-mongo.js status",
    "migrate:down:all": "ts-node --project tsconfig.json ./src/rollbackAll.ts",
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
